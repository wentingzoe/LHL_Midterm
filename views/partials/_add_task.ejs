
<article class="new-task-container thick lined">
  <h2>Add task</h2>
  <form action="/tasks/add" method="POST" class="new-task-content">
    <div class="new-task-textarea thick dotted">
      <label for="task_title"></label>
      <input name="task_title" class="form-control" type="text" placeholder="Title">
      <label for="task_desc"></label>
      <textarea name="task_desc" class="form-control" placeholder="Task description" name="" id="" cols="30" rows="10"></textarea>
    </div>

    <div class="new-task-button">
      <button>Add Task</button>
    </div>
  </form>
</article>
